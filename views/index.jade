extends pagesetup/_bootstrap
append styles
    // Custom styles for this template
    link(href='./css/login.css', rel='stylesheet')
block body
    .container

        form.form-signin(method="post", id="loginForm", action="login")
            h2.form-signin-heading Please sign in
            - if (message.length > 0)
                div.alert.alert-danger
                    message= message
            label.sr-only(for='inputEmail') Email address
            input#inputEmail.form-control(name='email', type='text', placeholder='Email address', required='', autofocus='')
            label.sr-only(for='inputPassword') Password
            input#inputPassword.form-control(name='password', type='password', placeholder='Password', required='')
            .checkbox
                label
                    input(name='rememberme', type='checkbox', value='remember-me')
                    |  Remember me
            button.btn.btn-lg.btn-primary.btn-block(type='submit') Sign in
